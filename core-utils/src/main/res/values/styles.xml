<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ClickableItem">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="TextView.Main" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:textColor">@color/main_text_color</item>
    </style>

    <style name="TextView.H1.Bold" parent="TextView.Main">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">@dimen/sp_24</item>
    </style>

    <style name="TextView.H1.Bold.Centred" parent="TextView.H1.Bold">
        <item name="android:gravity">center</item>
    </style>

    <style name="TextView.Main.Centred" parent="TextView.Main">
        <item name="android:gravity">center</item>
    </style>

    <style name="TextView.Medium" parent="TextView.Main">
        <item name="android:textSize">@dimen/sp_13</item>
    </style>

    <style name="TextView.Medium.Secondary" parent="TextView.Medium">
        <item name="android:textColor">@color/hint_text_color_secondary</item>
    </style>

    <style name="TextView.Medium.Bold" parent="TextView.Medium">
        <item name="android:fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="TextView.Main.Bold" parent="TextView.Main">
        <item name="android:fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="TextView.Secondary.Hint" parent="TextView.Main">
        <item name="android:textSize">@dimen/sp_10</item>
        <item name="android:textColor">@color/hint_text_color</item>
    </style>

    <style name="TextView.SecondaryMedium.Hint" parent="TextView.Secondary.Hint">
        <item name="android:textSize">@dimen/sp_13</item>
    </style>

    <style name="TextView.MainLight" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/main_text_color_light</item>
    </style>

    <style name="TextView.DialogMain" parent="TextView.Main">
        <item name="android:gravity">center</item>
        <item name="android:lineSpacingExtra">@dimen/dp_2</item>
        <item name="android:padding">@dimen/dp_16</item>
    </style>

    <style name="TextView.DialogMainError" parent="TextView.DialogMain">
        <item name="android:textColor">@color/error_text_color</item>
    </style>

    <style name="TextView.DialogTitle" parent="TextView.Main">
        <item name="android:gravity">center</item>
        <item name="android:lineSpacingExtra">@dimen/dp_2</item>
        <item name="android:padding">@dimen/dp_16</item>
    </style>

    <style name="TextView.DefaultListItem" parent="TextView.Main">
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:padding">@dimen/dp_16</item>
    </style>

    <style name="TextView.SettingTitle" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">@dimen/sp_13</item>
        <item name="android:textColor">@color/main_text_color</item>
        <item name="android:paddingLeft">@dimen/dp_16</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TextView.Bold" parent="TextView.Main">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">@dimen/sp_24</item>
    </style>

    <style name="TextView.LeftCentred" parent="TextView.Main">
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TextView.LeftCentred.SmallBold" parent="TextView.LeftCentred">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">@dimen/sp_13</item>
    </style>

    <style name="ToolbarStyle">
        <item name="android:background">@color/background_secondary</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_56</item>
    </style>

    <style name="VerticalScrollbars">
        <item name="android:scrollbars">vertical</item>
        <item name="android:scrollbarSize">2.0dp</item>
        <item name="android:scrollbarFadeDuration">125</item>
        <item name="android:scrollbarDefaultDelayBeforeFade">250</item>
    </style>

    <style name="EditText.Input" parent="Widget.AppCompat.EditText">
        <item name="android:padding">@dimen/dp_8</item>
        <item name="android:textSize">@dimen/sp_18</item>
        <item name="android:hint">@string/nickname_hint</item>
        <item name="android:background">@drawable/background_input_edit_text</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/main_text_color</item>
    </style>

    <style name="EditText.MessagesInput" parent="Widget.AppCompat.EditText">
        <item name="android:background">@null</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:hint">@string/type_message</item>
        <item name="android:inputType">
            text|textAutoComplete|textMultiLine|textAutoCorrect|textCapSentences
        </item>
        <item name="android:maxLines">5</item>
        <item name="android:minHeight">@dimen/dp_48</item>
        <item name="android:paddingLeft">@dimen/dp_4</item>
        <item name="android:paddingRight">@dimen/dp_4</item>
        <item name="android:paddingTop">@dimen/dp_8</item>
        <item name="android:paddingBottom">@dimen/dp_8</item>
        <item name="android:textColor">@color/main_text_color</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:textColorHint">@color/hint_text_color_secondary</item>
    </style>

    <style name="Dialog.SheetDialogTheme" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/SheetDialogAnimation</item>
        <item name="android:windowSoftInputMode">stateUnchanged</item>
    </style>

    <style name="SheetDialogAnimation">
        <item name="android:windowEnterAnimation">@null</item>
        <item name="android:windowExitAnimation">@null</item>
    </style>

    <style name="ImageButton.Action" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_width">@dimen/dp_40</item>
        <item name="android:layout_height">@dimen/dp_40</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:background">?selectableItemBackgroundBorderless</item>
    </style>

    <style name="ImageButton.Action.Small" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_width">@dimen/dp_16</item>
        <item name="android:layout_height">@dimen/dp_16</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:background">?selectableItemBackgroundBorderless</item>
    </style>

    <style name="EditText.Search" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_40</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textColor">@color/main_text_color</item>
        <item name="android:paddingStart">@dimen/dp_8</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingEnd">@dimen/dp_16</item>
        <item name="android:textColorHint">@color/hint_text_color_secondary</item>
        <item name="android:textSize">@dimen/sp_16</item>
    </style>


</resources>