<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ru.kubov.core_utils.presentation.view.message.QuotedChatMessageView
        android:id="@+id/view_messages_attachment__qcmv__quoted_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_6"
        android:visibility="gone" />

    <TextView
        android:id="@+id/view_messages_attachment__tv_sending_message_failed"
        style="@style/TextView.LeftCentred"
        android:layout_width="match_parent"
        android:layout_height="18dp"
        android:layout_marginTop="@dimen/dp_6"
        android:text="@string/error_sending_message"
        android:visibility="gone" />

</LinearLayout>