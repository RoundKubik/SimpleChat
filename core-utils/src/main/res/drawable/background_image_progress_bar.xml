<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape
            android:innerRadius="@dimen/dp_20"
            android:shape="ring"
            android:thickness="@dimen/dp_4"
            android:useLevel="false">

            <size
                android:width="@dimen/dp_48"
                android:height="@dimen/dp_48" />

            <solid android:color="@color/progress_bar_content_color" />

        </shape>
    </item>

    <item android:id="@android:id/progress">
        <rotate
            android:fromDegrees="270"
            android:toDegrees="270">
            <shape
                android:innerRadius="@dimen/dp_20"
                android:shape="ring"
                android:thickness="@dimen/dp_4"
                android:useLevel="true">

                <size
                    android:width="@dimen/dp_48"
                    android:height="@dimen/dp_48" />

                <solid
                    android:color="@color/primary_highlight_color"
                    android:useLevel="false" />

            </shape>
        </rotate>
    </item>

</layer-list>